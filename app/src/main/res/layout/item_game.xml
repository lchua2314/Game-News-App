<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/tvPoster"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/tvPoster"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:typeface="serif"
        tools:text="Nomadland Wins Three Oscars At 93rd Academy Awards" />

    <TextView
        android:id="@+id/tvOverview"
        android:layout_width="290dp"
        android:layout_height="106dp"
        android:layout_below="@+id/tvTitle"
        android:layout_alignBottom="@+id/tvPoster"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="-2dp"
        android:layout_toEndOf="@+id/tvPoster"
        android:textColor="@color/black"
        android:textSize="11sp"
        android:typeface="serif"
        tools:text="Wonder Woman comes into conflict with the Soviet Union during the Cold War in the 1980s and finds a formidable foe by the name of the Cheetah." />
</RelativeLayout>